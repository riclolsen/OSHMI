{
  "width": 400,
  "height": 200,
  "padding": {"top": 10, "left": 30, "bottom": 30, "right": 10},
  "data": [
    {
      "name": "table",
      "values": [ "HIS#1" ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "zero": false,
      "domain": {"data": "table", "field": "x"}
    },
    {
      "name": "c",
      "type": "ordinal",
      "range": ["#00eeee", "#4575b4", "#dcfab9", "#d9a6ff", "#e0f3f8", "#ffffbf", "#ffc794", "#fee090"]
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "range": "height",
      "domain": [0, 27]
    }
  ],
  "axes": [
    { 
      "type": "x", 
      "scale": "x",
      "ticks": 5,      
      "format":"%H:%M",
      "grid": true,
      "properties": { 
          "grid": {
              "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.5}},
          "ticks": {
              "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.7}
              },
          "labels": {
              "fill": {"value": "#00eeee"}
              },
          "axis": {
              "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.7}
              }  
          }
    },
    { 
      "type": "y", 
      "scale": "y" , 
      "format": "0.0f", 
      "grid": true,
      "properties": {
          "grid": {
              "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.5}},
          "axis": {
              "stroke": {"value": "#00eeee"}
              },
          "labels": {
              "fill": {"value": "#00eeee"},
              "font": {"value": "open sans"},
              "fontSize": {"value": 14},
              "fontStyle": {"value": "oblique"},
              "fontWeight": {"value": 300}
              },
          "ticks": {
              "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.7}
              }                  
          }
    }
  ],
  "marks": [
    {
      "type": "line",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "size": {"value": 1},
          "interpolate": {"value": "none"},
          "x": {"scale": "x", "field": "x"},
          "y": {"scale": "y", "field": "y"},
          "stroke": {"scale": "c", "field": "pnt"},
          "stroke": {"value": "#00eeee"}, "strokeWidth": {"value": 0.7}          
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      }
    }
  ]
}